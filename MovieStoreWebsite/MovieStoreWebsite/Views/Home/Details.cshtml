@model MovieStoreWebsite.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="width: 100%; max-height: 550px; object-fit: cover;" />
        </div>

        <div class="col-md-8">
            <h1 class="display-4 fw-bold">@Model.Title</h1>
            <p class="text-muted">@Model.Genre | @Model.ReleaseDate.ToString("MMMM dd, yyyy")</p>
            <hr />

            <h3>Storyline</h3>
            <p class="lead">@Model.Description</p>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                <button class="btn btn-danger btn-lg ms-2">Watch Trailer</button>
            </div>
        </div>
    </div>
</div>