@{
    ViewData["Title"] = "About CineXHub";
}

<div class="about-container" style="color: white;">
    <div class="about-hero">
        <h1 class="display-3 fw-bold text-white">Experience <span class="accent">Cinema</span> Like Never Before</h1>
        <p class="lead text-white">CineXHub is more than a database; it's a gateway to the world of storytelling.</p>
    </div>

    <div class="about-content">
        <div class="row mb-5">
            <div class="col-md-6">
                <h2 class="section-title text-white">What is <span class="accent">CineX</span>Hub?</h2>
                <p class="text-white">
                    CineXHub is a high-performance movie discovery platform designed for the modern film enthusiast.
                    We've built a space where technical precision meets a love for the silver screen. Our platform
                    organizes thousands of titles into a seamless, fast, and visually immersive interface.
                </p>
            </div>
            <div class="col-md-6">
                <h2 class="section-title text-white">The Technology</h2>
                <p class="text-white">
                    Powered by <strong>ASP.NET Core</strong> and <strong>Entity Framework</strong>, CineXHub
                    leverages enterprise-grade backend architecture to ensure your movie searches and watchlists
                    are handled with lightning speed and rock-solid security.
                </p>
            </div>
        </div>

        <div class="features-grid row text-center my-5">
            <div class="col-md-4">
                <div class="feature-icon"><i class="bi bi-speedometer2" style="color: #e50914;"></i></div>
                <h4 class="text-white">Fast Performance</h4>
                <p class="text-white">Optimized queries for instant movie discovery.</p>
            </div>
            <div class="col-md-4">
                <div class="feature-icon"><i class="bi bi-palette" style="color: #e50914;"></i></div>
                <h4 class="text-white">Cinematic UI</h4>
                <p class="text-white">A dark, immersive design inspired by the theater experience.</p>
            </div>
            <div class="col-md-4">
                <div class="feature-icon"><i class="bi bi-database" style="color: #e50914;"></i></div>
                <h4 class="text-white">Reliable Data</h4>
                <p class="text-white">Managed via robust SQL Server database structures.</p>
            </div>
        </div>

        <hr class="my-5 border-secondary" />

        <div class="author-section pt-4">
            <div class="author-card" style="background: #111; border-left: 4px solid #e50914; padding: 25px; border-radius: 8px;">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                        <div class="author-avatar-placeholder" style="color: #e50914; border: 1px solid #333; background: #1a1a1a;">SB</div>
                    </div>
                    <div class="col-md-9">
                        <h4 class="mb-1 text-white">Shiva Bishwokarma</h4>
                        <p class="small fw-bold text-uppercase mb-2" style="color: #e50914; letter-spacing: 1px;">Architect & Founder</p>
                        <p class="bio-short text-white" style="opacity: 0.9;">
                            Shiva developed CineXHub as a passion project to demonstrate the power of
                            modern web frameworks. His goal is to blend high-end engineering with
                            creative UI to build the ultimate hub for cinephiles.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>